              <% end %>
            </td>
            <td>
              <% rentals.each do |rental| %>
                <%= link_to "refuser", refuse_path(rental), class: "btn btn-danger button-rental m-1", data: { turbo_method: "PATCH" } %>
              <% end %>
            </td>
            <td>
